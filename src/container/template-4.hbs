<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<main class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">
            {{heading}}
        </h1>
        <p class="main_text">
            {{description}}
        </p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{>cardFeatured data=this}}
    {{/each}}
</div>

<div class="actions">
    {{#each actions}}
    <div class="actions_content">
        <h3 class="actions_title">
            {{heading}}
        </h3>
        <a href="{{url}}" class="actions_buttons">{{text}}</a>
    </div>
    {{/each}}
</div>


<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Â© 2023</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>
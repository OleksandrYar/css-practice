<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    <div class="info">
        <h1 class="info_title">{{info.title}}</h1>
        <p class="info_description">{{info.description}}</p>
    </div>
    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>
{{#with updates}}
<div class="updates">
    <h2 class="updates_title">{{title}}</h2>
    {{#each list}}
    <div class="updates_lists">
        {{> vector}}
        <div class="updates_info">
            <p class="updates_nickname">{{nickname}}</p>
            <span class="update_text">{{description}}</span>
        </div>
    </div>
    {{/each}}

    <a href="#" class="updates_link">All messages</a>
</div>
{{/with}}
{{#with experience}}
<div class="experience">
    <span class="icon">{{badge}}</span>
    <h3 class="exp_title">{{title}}</h3>
    <div class="exp_list">
         {{#each list}}
        <div class="exp_card">
            <p class="exp_name">{{name}}</p>
            <span class="exp_info">{{details}}</span>
        </div>
         {{/each}}
    </div>
</div>
{{/with}}
<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Â© 2023</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>